{
  "compilerOptions": {
    "baseUrl": "./",
    "target": "es2022",
    "moduleResolution": "node",
    "declaration": true,
    "removeComments": true,
    "skipLibCheck": true,
    "strict": true,
    "downlevelIteration": true,
    "noUncheckedIndexedAccess": true,
    "esModuleInterop": true,
    "paths": {
      "@exodus/transform-storage": ["./libraries/transform-storage/src"],
      "@exodus/transform-storage/*": ["./libraries/transform-storage/src/*"]
    }
  },
  "exclude": ["node_modules"]
}

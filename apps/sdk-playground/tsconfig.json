{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "SDK Playground",
  "compilerOptions": {
    "jsx": "react-jsx",
    "target": "ES2022",
    "composite": false,
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "inlineSources": false,
    "isolatedModules": true,
    "lib": ["ESNext", "DOM", "DOM.Iterable"],
    "useDefineForClassFields": true,
    "module": "ESNext",
    "moduleResolution": "node",
    "noEmit": true,
    "noImplicitAny": false,
    "noImplicitReturns": true,
    "preserveWatchOutput": true,
    "skipLibCheck": true,
    "strict": true,
    "stripInternal": true,
    "resolveJsonModule": true,
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["src", "vite.config.ts", "__tests__", "e2e", "playwright.config.ts"],
  "exclude": ["node_modules"]
}

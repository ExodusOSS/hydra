{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "properties": {
    "event": {
      "const": "ExodusTransactionBroadcast"
    },
    "properties": {
      "allOf": [
        {
          "$ref": "common-properties#"
        }
      ],
      "type": "object",
      "required": [],
      "properties": {
        "asset": {
          "type": "string",
          "enum": ["SOL"]
        },
        "asset_name": {
          "type": "string",
          "enum": ["solana"]
        },
        "feature": {
          "type": "string",
          "enum": ["solana-pay"]
        },
        "network": {
          "type": "string",
          "enum": ["solana"]
        },
        "success": {
          "type": "boolean"
        },
        "type": {
          "type": "string",
          "enum": ["transfer-request"]
        }
      },
      "unevaluatedProperties": false
    }
  },
  "unevaluatedProperties": false,
  "required": ["event", "properties"]
}
